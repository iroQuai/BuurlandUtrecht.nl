{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.content.pageFolders": [
    {
      "path": "[[workspace]]/content"
    },
    {
      "path": "[[workspace]]/static"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "image",
          "name": "image",
          "type": "choice",
          "choices": [
            "images/banner.jpg"
          ]
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        }
      ]
    },
    {
      "name": "post",
      "pageBundle": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "image",
          "name": "image",
          "type": "choice",
          "choices": [
            "images/banner.jpg"
          ]
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        },
        {
          "name": "type",
          "type": "string",
          "default": "post",
          "hidden": true
        }
      ]
    },
    {
      "name": "page",
      "pageBundle": true,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "image",
          "name": "image",
          "type": "choice",
          "choices": [
            "images/banner.jpg"
          ]
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.content.snippets": {
    "Hugo Easy Gallery - individuele images": {
      "description": "Specifieke plaatjes kiezen als gallerij samen.  zie ook https://github.com/liwenyip/hugo-easy-gallery",
      "body": [
        "{{< load-photoswipe >}}",
        "{{< gallery >}}",
        "  {{< figure src=\"image1.jpg\" >}}",
        "  {{< figure src=\"image2.jpg\" >}}",
        "  {{< figure src=\"image3.jpg\" >}}",
        "{{< /gallery >}}"
      ],
      "fields": []
    },
    "Hugo Easy Gallery - gallerij van folder": {
      "description": "selecteer een folder om een gallerij van te maken. kijk ook op https://github.com/liwenyip/hugo-easy-gallery",
      "body": [
        "{{< load-photoswipe >}}",
        "{{< gallery dir=\"/img/your-directory-of-images/\" />}}"
      ],
      "fields": []
    },
    "Hugo Easy Gallery - indivueel plaatje": {
      "description": "één plaatje als \"figure\". aparte thumbnail en link. ",
      "body": [
        "{{< load-photoswipe >}}",
        "{{< figure src=\"thumb.jpg\" link=\"image.jpg\" >}}"
      ],
      "fields": []
    }
  },
  "frontMatter.content.autoUpdateDate": true,
  "frontMatter.templates.enabled": true
}